#!/bin/sh
if [ "${2}" != "POST-INSTALL" ]; then
	exit 0
fi

# Make this package known to pfSense
/usr/local/bin/php -f /etc/rc.packages %%PORTNAME%% ${2}

# Setup the pfsense-api command line tool
/bin/chmod +x /usr/local/share/pfSense-pkg-API/manage.php
/bin/ln -s /usr/local/share/pfSense-pkg-API/manage.php /usr/local/bin/pfsense-api

# Build endpoints, forms, documentation and restore an existing configuration if present/configured
/usr/local/bin/php -f /usr/local/share/pfSense-pkg-API/manage.php buildendpoints
/usr/local/bin/php -f /usr/local/share/pfSense-pkg-API/manage.php buildforms
/usr/local/bin/php -f /usr/local/share/pfSense-pkg-API/manage.php generatedocs
/usr/local/bin/php -f /usr/local/share/pfSense-pkg-API/manage.php restore

# Restart the web GUI in the background to apply nginx changes
/usr/local/bin/php -f /usr/local/share/pfSense-pkg-API/manage.php restartwebgui


